<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="LoginActivityBinding">
        <import type="android.view.View" />
        <variable
            name="handler"
            type="application.android.com.grocpop.ui.login.LoginActivity" />
    </data>

    <LinearLayout

        android:id="@+id/content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:weightSum="2">


    <LinearLayout
        android:id="@+id/poster_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/login_screen">
        </androidx.appcompat.widget.AppCompatImageView>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/verification_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/welcome_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_20"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to our GrocPop Store"
                android:textColor="@color/color_black"
                android:textSize="30dp">
            </TextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:padding="@dimen/dp_5"
                android:textColor="@color/color_black"
                android:layout_marginTop="@dimen/dp_20"
                android:text="Groceries at your doorstep with in 3 hour">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:padding="@dimen/dp_5"
                android:textColor="@color/color_black"
                android:text="No Contact Delivery">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:padding="@dimen/dp_5"
                android:textColor="@color/color_black"
                android:text="Every Product is being sanitize">
            </androidx.appcompat.widget.AppCompatTextView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/get_start_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GET STARTED"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/button_corner"
                android:textColor="@color/color_white"
                android:padding="@dimen/dp_15">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_no_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_20"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_your_groceries_with_us"
                android:textColor="@color/color_black"
                android:textSize="25dp">
            </TextView>


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:hint="@string/enter_mobile_number">
            </androidx.appcompat.widget.AppCompatEditText>

            <ImageView
                android:id="@+id/get_otp_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_gravity="center"
                android:padding="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/button_circle">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/otp_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_20"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_your_4_digit_code"
                android:textColor="@color/color_black"
                android:textSize="25dp">
            </TextView>


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:hint="Enter 4 digit code">
            </androidx.appcompat.widget.AppCompatEditText>

            <ImageView
                android:id="@+id/verify_otp_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_gravity="center"
                android:padding="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/button_circle">
            </ImageView>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout

        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        android:visibility="gone">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:src="@drawable/login_screen"
            android:padding="@dimen/dp_20">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/color_black"
            android:textSize="25dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your details to continue"
            android:textSize="18dp">
        </TextView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_20">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="Afsar Hossen Shuvo"
            android:hint="Enter 4 digit code">
        </androidx.appcompat.widget.AppCompatEditText>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_20">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="imshuvo97@gmail.com"
            android:hint="Enter Email Id">
        </androidx.appcompat.widget.AppCompatEditText>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_condition"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_20">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/button_corner"
            android:textColor="@color/color_white"
            android:padding="@dimen/dp_15">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>
</LinearLayout>

</layout>